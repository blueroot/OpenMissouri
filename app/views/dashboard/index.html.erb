<% content_for :sidebar do %>

<div id="sidebar">
	<div id="sidebar_content">
		
		<div class="sidebar_section_unbound" class="clearfix">
		  <%= render :partial => "/shared/add_data_set_actions" %>
			<%= render :partial => "/shared/social_follow_links" %>
		</div>
		
		<div class="sidebar_section" class="clearfix">
			<%= render :partial => "/shared/news_headlines" %>
		</div>
		
		<div class="sidebar_section" class="clearfix">
			<%= render :partial => "/shared/categories_list" %>
		</div>
		<%= render :partial => "/shared/email_subscription_form"%>
	</div>
</div>
<% end %>


<div class="tagline"><span class="one">Find</span> <span class="two">Request</span> <span class="three">Share</span> 
	<br />state and local government data.</div>

<script src="/javascripts/swfobject.js" type="text/javascript"></script>
<div id="flashcontent"></div>
&#160;
<script type="text/javascript">var so = new SWFObject("/soundslider.swf", "Open Missouri", "620", "373", "8", "#000000");
   so.write("flashcontent");</script>


<h3>Recent Data Sets</h3>
<% unless @data_sets.blank? %>
	<div id="data_sets" class="data_list">
		<% @data_sets.each do |data_set| %>
			<div class="data_item">
				<h3><%= link_to data_set.name, data_set_path(data_set) %><% if data_set.samplefile? %>
				<span style="float: right;"><%= link_to "Download sample data", data_set.samplefile.url, {:class => "small orange awesome"} %></span>
				<% end%></h3>
				<div class="organization"><% unless data_set.organization.blank? %><%= link_to data_set.organization.name, organization_path(data_set.organization) %><% end %></div>
				<div class="categories"><%= data_set.categories.collect{|category| category.name}.join(", ") %></div>
			</div>
		<% end %>
	</div>
<% else %>
	<p>We were not able to find any data sets for you.</p>
<% end %>
